{
  "name": "spectral-synth",
  "version": "1.0.0",
  "description": "Making molecular fingerprints audible through sonification of FTIR spectroscopy data",
  "main": "app.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "eslint *.js --ignore-pattern '*.min.js'",
    "lint:fix": "eslint *.js --fix --ignore-pattern '*.min.js'",
    "build": "node build.js && node split-library.js",
    "build:fast": "node build.js",
    "split-library": "node split-library.js",
    "clean": "rm -rf dist",
    "prepare": "husky"
  },
  "keywords": [
    "ftir",
    "spectroscopy",
    "sonification",
    "web-audio",
    "chemistry",
    "audio-synthesis"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "terser": "^5.44.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ignore-pattern '*.min.js'"
    ]
  }
}
