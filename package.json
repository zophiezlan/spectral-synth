{
  "name": "spectral-synthesizer",
  "version": "2.0.0",
  "description": "Making molecular fingerprints audible through sonification of FTIR spectroscopy data",
  "type": "module",
  "main": "public/index.html",
  "scripts": {
    "start": "npx http-server public -p 8080 -c-1",
    "build": "node scripts/build-library.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "validate": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zophiezlan/spectral-synth.git"
  },
  "keywords": [
    "ftir",
    "spectroscopy",
    "sonification",
    "web-audio-api",
    "chemistry",
    "visualization",
    "pwa"
  ],
  "author": "zophiezlan",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "eslint": "^9.17.0",
    "globals": "^15.13.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ]
}
